import turtle#imports turtle module

t = turtle.Turtle() #sets t as turtle

bl = int(input("Length?  "))
while bl > 10:
    bl = bl / 2
    
t.left(90)
t.penup()
t.bk(100)
t.pendown()
t.color("red")
t.color("blue")

t.fd(bl*8)
t.right(20)
t.fd(bl*4)
t.right(20)
t.fd(bl*2)
t.right(20)
t.fd(bl)
t.bk(bl)
t.left(40)
t.fd(bl)
t.bk(bl)
t.right(20)
t.bk(bl*2)
t.left(40)
t.fd(bl*2)
t.right(20)
t.fd(bl)
t.bk(bl)
t.left(40)
t.fd(bl)
t.bk(bl)
t.right(20)
t.bk(bl*2)
t.right(20)
t.bk(bl*4)
t.left(40)
t.fd(bl*4)
t.right(20)
t.fd(bl*2)
t.right(20)
t.fd(bl)
t.bk(bl)
t.left(40)
t.fd(bl)
t.bk(bl)
t.right(20)
t.bk(bl*2)
t.left(40)
t.fd(bl*2)
t.right(20)
t.fd(bl)
t.bk(bl)
t.left(40)
t.fd(bl)
t.bk(bl)
t.right(20)
t.bk(bl*2)
t.right(20)
t.bk(bl*4)


